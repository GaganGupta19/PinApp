<%= form_for @image , :html => { :class => "form-horizontal event" }  do |f| %>
  <% if image.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h2 class="panel-title"><%= pluralize(image.errors.count, "error") %> prohibited this image from being saved:</h2>
      </div>
      <div class="panel-body">
        <ul>
        <% image.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>  
    </div>
  <% end %>

  
  <div class="form-group">
    <%= f.label :src, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :src, :class => 'form-control' %>
    </div>
  </div>

  <%= f.fields_for :tags do |builder| %>
    <%= render 'tag_fields', f: builder %>
  <% end %>

  <%= link_to_add_tag "Add Tag", f, :tags %>
  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
    </div>
  </div>
<% end %>